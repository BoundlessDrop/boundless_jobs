= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :level
    = f.select :level, options_for_select(job_levels)
  .field
    = f.label :skills
    = f.text_area :skills
  .actions
    = f.submit 'Save'
