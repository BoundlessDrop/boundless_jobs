%h1 Listing jobs

%table
  %thead
    %tr
      %th Position
      %th Description
      %th Level
      %th Skills
      %th
      %th
      %th

  %tbody
    - @jobs.each do |job|
      %tr
        %td= job.position
        %td= job.description
        %td= job.level
        %td= job.skills
        %td= link_to 'Show', job
        %td= link_to 'Edit', edit_job_path(job)
        %td= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }

%br

